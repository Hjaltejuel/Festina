@model Sommerhuse.Models.Dato


<h2 class="coverTitle">Bookning</h2>

<h4 class="lead">Lav ændringer i bookningen</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fra" class="control-label"></label>
                <input asp-for="Fra" type="date" class="form-control" />
                <span asp-validation-for="Fra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Til" class="control-label"></label>
                <input asp-for="Til" type="date" class="form-control" />
                <span asp-validation-for="Til" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personer" class="control-label"></label>
                <input asp-for="Personer" class="form-control" />
                <span asp-validation-for="Personer" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-default">Gem</button>
            </div>
        </form>


<div>
    <a class="testtest" asp-action="Index">Tilbage til planlægning</a>
    <a class="testtest" asp-action="Delete" asp-route-id="@Model.Id">Slet</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
